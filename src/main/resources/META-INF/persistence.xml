<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="systems.whitestar.mediasite_monitor.jpa">
        <description>
            Persistence unit for the Mediasite Monitor JPA
        </description>

        <class>systems.whitestar.mediasite_monitor.API.Models.Preference</class>
        <class>systems.whitestar.mediasite_monitor.API.Models.Recorder</class>
        <class>systems.whitestar.mediasite_monitor.API.Models.User</class>
        <class>systems.whitestar.mediasite_monitor.Agent.Models.Agent</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.c3p0.min_size" value="1"/>
            <property name="hibernate.c3p0.max_size" value="10"/>
            <property name="hibernate.c3p0.timeout" value="1800"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>

            <property name="hibernate.shutdown" value="true"/>
        </properties>

    </persistence-unit>

</persistence>
