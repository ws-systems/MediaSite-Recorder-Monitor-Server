<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">
    <display-name>MediaSite Recorder Monitor</display-name>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>systems.whitestar.mediasite_monitor.Routes.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>systems.whitestar.mediasite_monitor.Routes.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Manage-Integrations</servlet-name>
        <servlet-class>systems.whitestar.mediasite_monitor.Routes.ManageIntegration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Manage-Integrations</servlet-name>
        <url-pattern>/manage/integrations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Manage-Rates</servlet-name>
        <servlet-class>systems.whitestar.mediasite_monitor.Routes.ManageRates</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Manage-Rates</servlet-name>
        <url-pattern>/manage/rates</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Manage-Users</servlet-name>
        <servlet-class>systems.whitestar.mediasite_monitor.Routes.ManageUsers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Manage-Users</servlet-name>
        <url-pattern>/manage/users</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>API</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>edu.sdsu.its</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>API</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>systems.whitestar.mediasite_monitor.API.APIFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>

    <listener>
        <listener-class>systems.whitestar.mediasite_monitor.Init</listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>

