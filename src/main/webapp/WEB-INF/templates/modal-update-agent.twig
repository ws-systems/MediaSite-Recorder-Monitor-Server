<div class="modal fade" id="updateAgentModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Agent</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" onsubmit="updateAgent(); return false;">
                    <div class="form-group row">
                        <label for="agentID" class="col-sm-3 col-form-label">ID: </label>
                        <div class="col-sm-9">
                            <input readonly class="form-control-plaintext" title="ID" type="text" id="agentID" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="updateName" class="col-sm-3 col-form-label">Name: </label>
                        <div class="col-sm-9">
                            <input class="form-control" title="Name" type="text" id="updateName" required>
                        </div>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label mr-2">
                            <input class="form-check-input" type="checkbox" value="" id="updateAuthorization">
                            Authorize Agent
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger float-left mr-auto" onclick="deleteAgent()"
                        id="deleteAgentBtn" title="Online Agents cannot be deleted.">Delete Agent
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="$('#updateAgentModal').find('form').submit()">
                    Update Agent
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->