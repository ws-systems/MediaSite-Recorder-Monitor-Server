<div class="modal fade" id="updateUserModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Monitor User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" onsubmit="updateUser(); return false;">
                    <input type="hidden" id="userPK">
                    <div class="form-group row">
                        <label for="updateEmail" class="col-sm-3 col-form-label">Email: </label>
                        <div class="col-sm-9">
                            <input readonly class="form-control-plaintext" title="Email" type="email" id="updateEmail">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="updateFirstName" class="col-sm-3 col-form-label">Name: </label>
                        <div class="col-sm-9">
                            <input readonly class="form-control-plaintext" title="Name" type="text" id="updateName" required>
                        </div>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label mr-2">
                            <input class="form-check-input" type="checkbox" value="" id="updateNotifyCheckbox">
                            Notify User via Email on Recorder Alarms
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger float-left mr-auto" onclick="deleteUser()" id="deleteUserBtn">Delete User
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="$('#updateUserModal').find('form').submit()">Update
                    User
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->